<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>  
    <comment>数据服务器配置文件</comment>
	<!-- RPC服务ip地址 -->
	<entry  
        key="ip">localhost</entry>
	<!-- 向客户端提供的RPC服务端口号 -->
    <entry  
        key="clientrpcport">2022</entry>
	<!-- 向其他数据节点提供的RPC服务端口号 -->
    <entry  
        key="datanoderpcport">5022</entry>
	<!-- 向主控节点提供的RPC服务ip地址 -->
    <entry  
        key="namenoderpcport">8022</entry>
	<!-- 主控节点ip地址 -->	
    <entry  
        key="namenodeip">localhost</entry>
	<!-- 主控节点端口号 -->	
    <entry  
        key="namenodeport">2020</entry>
	<!-- 数据块存储目录 -->
    <entry  
        key="blockdir">datablocks</entry>
	<!-- 心跳时间（ms）。每隔几毫秒发送一次心跳 -->
    <entry  
        key="perseconds">6000</entry>
</properties>

<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>  
    <comment>数据服务器配置文件</comment>
    <!-- RPC服务ip地址 -->
	<entry  
        key="ip">172.29.140.241</entry>
	<!-- RPC服务端口号 -->
    <entry  
        key="port">2021</entry>
	<!-- 主控节点ip地址 -->	
    <entry  
        key="namenodeip">172.29.140.241</entry>
	<!-- 主控节点端口号 -->	
    <entry  
        key="namenodeport">2020</entry>
